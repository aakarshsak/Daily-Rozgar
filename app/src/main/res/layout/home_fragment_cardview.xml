<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="cards_main_container"
    android:layout_margin="0dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="7dp"
        android:id="@+id/homeCardView"
        android:elevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="0dp"
            android:background="@color/primary_light">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:src="@drawable/painter"
                android:id="@+id/image"
                android:layout_marginBottom="0dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:text="SKULL"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="18dp"
                android:fontFamily="casual"
                android:layout_centerHorizontal="true"
                android:textColor="@color/primary_text"
                android:id="@+id/homeCardText"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:typeface="monospace"
                android:textColor="@color/primary_text"
                android:text="this is to show where the description of the profession will go. "
                android:layout_below="@id/homeCardText"
                android:id="@+id/homeCardDesc"
                android:layout_marginBottom="5dp"
                />

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:layout_marginHorizontal="4dp"-->
                <!--android:background="@color/primary"-->
                <!--android:layout_below="@id/homeCardText"/>-->
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>