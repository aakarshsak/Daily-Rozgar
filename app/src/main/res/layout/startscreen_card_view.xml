<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/startCardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/primary_light">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:id="@+id/devImage"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/user"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:id="@+id/devName"
                android:text="Aakarh Sinha"
                android:layout_below="@id/devImage"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="24dp"
                android:textColor="@color/primary_text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:id="@+id/devDesc"
                android:textColor="@color/primary_text"
                android:text="Description of the developers that showcase the hardwork they have achieved"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/primary_dark"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/startCardView"
        />
</RelativeLayout>